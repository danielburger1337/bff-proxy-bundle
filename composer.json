{
    "name": "danielburger1337/bff-proxy-bundle",
    "description": "A Symfony bundle that adds the BFF proxy pattern.",
    "type": "symfony-bundle",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Daniel Burger",
            "homepage": "https://github.com/danielburger1337"
        }
    ],
    "keywords": [
        "bff-proxy",
        "oauth2"
    ],
    "require": {
        "php": "^8.4",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.1",
        "psr/http-message": "^1.0 || ^2.0",
        "symfony/framework-bundle": "^7.4 || ^8.0",
        "symfony/http-client": "^7.4 || ^8.0",
        "symfony/http-foundation": "^7.4 || ^8.0",
        "symfony/mime": "^7.4 || ^8.0",
        "symfony/psr-http-message-bridge": "^7.4 || ^8.0",
        "symfony/security-bundle": "^7.4 || ^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.92",
        "nyholm/psr7": "^1.8",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-symfony": "^2.0",
        "phpunit/phpunit": "^12.5",
        "psr/log": "^1.0 || ^2.0 || ^3.0"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "danielburger1337\\BffProxyBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "danielburger1337\\BffProxyBundle\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    }
}
